#include <stdio.h>

int main() {
   int n, reversed_number = 0, reminder;
   printf(" enter a number:");
   scanf("%d", &n);
   while(n != 0) {
         reminder = n % 10;
    reversed_number = reversed_number * 10 + reminder;
        n /= 10;
         }
         printf(" reversed_number is: %d\n", reversed_number);

    return 0;
}
